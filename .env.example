# ============================================================================
# LangFuse Configuration
# ============================================================================
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
LANGFUSE_HOST=https://cloud.langfuse.com
# Set to true to enable LangFuse tracing, false to disable
LANGFUSE_ENABLED=true

# ============================================================================
# LiteLLM Proxy Configuration
# ============================================================================
PROXY_HOST=0.0.0.0
PROXY_PORT=8000
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable debug mode for detailed logging
DEBUG_MODE=false

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Azure OpenAI
AZURE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2023-07-01-preview

# AWS Bedrock
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION_NAME=us-east-1

# Google Cloud Vertex AI
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Cohere
COHERE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hugging Face
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Security & Authentication
# ============================================================================
# Master key for proxy authentication (optional)
LITELLM_MASTER_KEY=sk-proxy-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Enable API key authentication
REQUIRE_AUTH=false

# ============================================================================
# Advanced Settings
# ============================================================================
# Maximum number of retries for failed requests
MAX_RETRIES=3
# Request timeout in seconds
REQUEST_TIMEOUT=600
# Enable streaming support
ENABLE_STREAMING=true
# Enable caching
ENABLE_CACHING=false
# Cache TTL in seconds
CACHE_TTL=3600

# ============================================================================
# Rate Limiting
# ============================================================================
# Enable rate limiting
ENABLE_RATE_LIMITING=false
# Requests per minute per user/key
RATE_LIMIT_RPM=60
# Tokens per minute per user/key
RATE_LIMIT_TPM=90000

# ============================================================================
# Monitoring & Metrics
# ============================================================================
# Enable Prometheus metrics endpoint
ENABLE_PROMETHEUS=true
# Prometheus metrics port
PROMETHEUS_PORT=9090
# Enable request/response logging
ENABLE_REQUEST_LOGGING=true
# Enable cost tracking
ENABLE_COST_TRACKING=true
